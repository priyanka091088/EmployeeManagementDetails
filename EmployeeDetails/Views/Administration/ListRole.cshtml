@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All roles";

}
<h1>Roles</h1>
@if (Model.Any())
{
    foreach (var role in Model)
    {
        <div class="card" mb-3>
            <div class="card-body">
                @role.Name
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleId="@role.Id">
                Add Or Remove User</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-title">
            No Roles Created Yet
        </div>
        <div class="card-body">
            <h5 class="card-title">Use the button below to create a new role
            </h5>

        </div>
    </div>
}
<br />
<a class="btn btn-primary" style="width:auto" asp-controller="Administration" asp-action="CreateRole">Create New Role</a>